{
    "name": "garrettw/aspire",
    "description": "Aspire is a general-purpose PHP app framework.",
    "type": "library",
    "keywords": ["php", "framework", "adr", "mvvm", "oop", "modular", "mvc"],
    "homepage": "https://github.com/garrettw/aspire",
    "license": "MIT",
    "authors": [
        {
            "name": "Garrett Whitehorn",
            "homepage": "http://garrettw.net/",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=8.4",
        "garrettw/aspire-dic": "*",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpspec/phpspec": "@dev",
        "phpstan/phpstan": "^2.1",
        "roave/security-advisories": "dev-latest"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../dic",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "Aspire\\Framework\\": "src/"
        }
    }
}
